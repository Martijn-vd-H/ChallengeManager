<UserControl x:Class="CodeChallengeManager.DescriptionControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="{Binding Title, FallbackValue=ChallengeTitle}" Style="{StaticResource BodyTextBlockLarge}"/>
        <TextBlock Grid.Row="1" Text="Description" FontWeight="Black"></TextBlock>
    </Grid>

</UserControl>